{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "knowledge-base-api",
	"main": "src/index.ts",
	"compatibility_date": "2025-08-12",
	"compatibility_flags": [
		"global_fetch_strictly_public"
	],
	"assets": {
		// The path to the directory containing the `index.html` file to be served at `/`
		"directory": "./public"
	},
	"observability": {
		"enabled": true
	},
	/**
	 * D1 Database Binding
	 */
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "knowledge-base-db",
			"database_id": "2c988bb5-33b2-4155-b435-35c1e64ca8fb"
		}
	],
	/**
	 * AI Binding for Cloudflare Workers AI
	 */
	"ai": {
		"binding": "AI"
	}
	/**
	 * Smart Placement
	 * Docs: https://developers.cloudflare.com/workers/configuration/smart-placement/#smart-placement
	 */
